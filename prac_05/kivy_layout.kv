BoxLayout:
    orientation: 'vertical'
    Label:
        text: app.status_text
        font_size: 60
        size_hint_y: 0.2
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: "Up"
            on_press: app.handle_press_with_exception(1)
        Button:
            text: "Down"
            on_press: app.handle_press_with_exception(-1)
    BoxLayout:
        id: names_box
        orientation: 'vertical'
        spacing: 5
    Label:
        text: "I did this :)"
        size_hint_y: 0.1
